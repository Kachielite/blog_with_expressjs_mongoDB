<!DOCTYPE html>
<html lang="en">
<%- include('../includes/header.ejs') %>


    <body>

        <!-- Begin Nav
    ================================================== -->
        <%- include('../includes/nav.ejs') %>
            <!-- End Nav
    ================================================== -->

            <!-- Begin Article
    ================================================== -->
            <div class="container">


                <!-- Begin Post -->
                <div class="col-md-8 col-md-offset-2 col-xs-12">
                    <main>
                        <form class="product-form" method="POST" action="/admin/update/<%= blog.id %>">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <div class="form-control">
                                <label for="title">Title</label>
                                <input type="text" name="title" value="<%= blog.title %> ">
                            </div>
                            <div class="form-control">
                                <label for="imageURL">Image URL (Must be the URL of the image for it to display correctly. You can upload images to an online resource and paste the URL here)</label>
                                <input type="text" name="imageURL" value="<%= blog.imageURL %> " placeholder="http://xxxxxx.com">
                            </div>
                            <div class="form-control">
                                <label for="article">Blog Post</label>
                                <textarea id="my-expressjs-tinymce-app" rows='40' name="article"><%= blog.article %></textarea>
                            </div>
                            <button class="btn" type="submit">Apply Update</button>
                        </form>
                    </main>

                </div>
                <!-- End Post -->
                <!-- Begin Footer
        ================================================== -->
                <%- include('../includes/footer.ejs') %>
                    <!-- End Footer
        ================================================== -->

            </div>





    </body>

</html>